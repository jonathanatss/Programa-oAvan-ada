#include <iostream>

using namespace std;

// O programa abaixo imprime os valores de cada variável que está dentro do vetor incrementando 1 no ponteiro que por sua vez a ponta para o vetor.
int main(){
      int vet[] = {4,9,13};
      int i;
      for(i=0;i<3;i++){
        printf("%d ",*(vet+i)); //
      }
    }

// O programa abaixo imprime os endereços de memória de cada uma das variáveis dentro do vetor. Utilizando um for para checar todas as variáveis do vetor.
int main(){
  int vet[] = {4,9,13};
  int i;
  for(i=0;i<3;i++){
    printf("%X ",vet+i);
  }
}






