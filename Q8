#include <iostream>

using namespace std;

int main()
{
    int x;
    int *p;
    int mat[4];

     p = mat + 1;// expressão válida
     p = mat++; // expressão não é válida, pois não se pode incrementar valor no vetor.
     p = ++mat; // expressão não é válida, pois não se pode incrementar valor no vetor.
     x = (*mat)++; // expressão válida.
     }


